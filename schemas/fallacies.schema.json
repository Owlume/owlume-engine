{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://owlume.org/schemas/fallacies.schema.json",
  "title": "Owlume Fallacies (Spec + List v0.1)",
  "type": "object",
  "required": [
    "spec",
    "fallacies"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "spec": {
      "type": "object",
      "required": [
        "name",
        "version",
        "owner",
        "date"
      ],
      "properties": {
        "name": {
          "type": "string",
          "const": "fallacies"
        },
        "version": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        },
        "date": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "fallacies": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "label",
          "definition"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_\\-]+$",
            "description": "machine id e.g. false_dilemma"
          },
          "label": {
            "type": "string",
            "description": "human name, e.g. False Dilemma"
          },
          "definition": {
            "type": "string",
            "minLength": 5
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}