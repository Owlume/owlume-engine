{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://owlume.org/schemas/context_driver.schema.json",
  "title": "Owlume Context Drivers (Spec + List v0.1)",
  "type": "object",
  "required": [
    "spec",
    "drivers"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "spec": {
      "type": "object",
      "required": [
        "name",
        "version",
        "owner",
        "date"
      ],
      "properties": {
        "name": {
          "type": "string",
          "const": "context_drivers"
        },
        "version": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        },
        "date": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "drivers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "label",
          "definition"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_\\-]+$",
            "description": "machine id, e.g. identity_protection"
          },
          "label": {
            "type": "string",
            "description": "human name, e.g. Identity Protection"
          },
          "definition": {
            "type": "string",
            "minLength": 5
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}