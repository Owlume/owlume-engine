{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "schemas/proof_of_clarity_signals.schema.json",
    "title": "Proof of Clarity Signals",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "spec_version": {
            "type": "string"
        },
        "signals": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^[a-z0-9_]+$",
                        "description": "machine id in snake_case"
                    },
                    "label": {
                        "type": "string",
                        "minLength": 1
                    },
                    "example_feedback": {
                        "type": "string",
                        "minLength": 1
                    },
                    "meaning": {
                        "type": "string",
                        "minLength": 1
                    },
                    "source_metric": {
                        "type": "string",
                        "minLength": 1,
                        "description": "internal metric or aggregation this signal is derived from"
                    }
                },
                "required": [
                    "id",
                    "label",
                    "example_feedback",
                    "meaning"
                ]
            }
        }
    },
    "required": [
        "signals"
    ]
}