{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "feedback_event",
    "type": "object",
    "required": [
        "event_id",
        "did",
        "type",
        "ts"
    ],
    "properties": {
        "event_id": {
            "type": "string"
        },
        "did": {
            "type": "string",
            "description": "Dilemma ID"
        },
        "ts": {
            "type": "string",
            "format": "date-time"
        },
        "type": {
            "type": "string",
            "enum": [
                "REPLY",
                "SHARE_CREATE",
                "SHARE_UPDATE",
                "SHARE_CANCEL",
                "CARD_VIEW",
                "LIKE",
                "BOOKMARK",
                "NUDGE_CLICK",
                "RATING",
                "FOLLOW_UP_REFLECTION"
            ]
        },
        "payload": {
            "type": "object"
        },
        "meta": {
            "type": "object",
            "properties": {
                "channel": {
                    "type": "string"
                },
                "agent_version": {
                    "type": "string"
                }
            },
            "additionalProperties": true
        }
    },
    "additionalProperties": false
}