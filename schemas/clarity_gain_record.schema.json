{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "clarity_gain_record",
    "type": "object",
    "additionalProperties": true,
    "properties": {
        "did": {
            "type": "string"
        },
        "mode_detected": {
            "type": "string"
        },
        "principle_detected": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "cg_pre": {
            "type": "number"
        },
        "cg_post": {
            "type": "number"
        },
        "cg_delta": {
            "type": "number"
        },
        "proof_signals": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "share": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string"
                },
                "channel": {
                    "type": "string"
                },
                "consent": {
                    "type": "boolean"
                },
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "additionalProperties": true
        },
        "empathy_state": {
            "oneOf": [
                {
                    "type": "string",
                    "enum": [
                        "ON",
                        "OFF"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "active": {
                            "type": "boolean"
                        },
                        "strength": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "active"
                    ],
                    "additionalProperties": true
                }
            ]
        },
        "empathy_feedback": {
            "type": "object",
            "properties": {
                "strength": {
                    "type": "number"
                },
                "helpful": {
                    "type": "boolean"
                }
            },
            "additionalProperties": true
        },
        "cg_live": {
            "type": "object",
            "properties": {
                "last_feedback_ts": {
                    "type": "string",
                    "format": "date-time"
                },
                "replies": {
                    "type": "integer"
                },
                "shares": {
                    "type": "integer"
                },
                "signals": {
                    "type": "object",
                    "properties": {
                        "views": {
                            "type": "integer"
                        },
                        "likes": {
                            "type": "integer"
                        },
                        "bookmarks": {
                            "type": "integer"
                        },
                        "nudges_clicked": {
                            "type": "integer"
                        },
                        "followups": {
                            "type": "integer"
                        }
                    },
                    "additionalProperties": false
                },
                "cg_adjust": {
                    "type": "number"
                }
            },
            "additionalProperties": false
        }
    }
}