{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Owlume — Clarity Gain Record",
    "type": "object",
    "properties": {
        "did": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "mode_detected": {
            "type": "string"
        },
        "principle_detected": {
            "type": "string"
        },
        "cg_pre": {
            "type": "number"
        },
        "cg_post": {
            "type": "number"
        },
        "cg_delta": {
            "type": "number"
        },
        "empathy_state": {
            "oneOf": [
                {
                    "type": "string",
                    "enum": [
                        "ON",
                        "OFF"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "active": {
                            "type": "boolean"
                        },
                        "rel": {
                            "type": "number"
                        },
                        "mor": {
                            "type": "number"
                        },
                        "ctx": {
                            "type": "number"
                        },
                        "adapt": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "active"
                    ],
                    "additionalProperties": false
                }
            ]
        },

    "empathy_feedback": {
            "type": "object",
            "required": [
                "resonance",
                "comfort",
                "trust_shift",
                "tone_fit",
                "timestamp"
            ],
            "properties": {
                "resonance": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 5
                },
                "comfort": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 5
                },
                "trust_shift": {
                    "type": "integer",
                    "minimum": -2,
                    "maximum": 2
                },
                "tone_fit": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 5
                },
                "notes": {
                    "type": "string",
                    "maxLength": 8000
                },
                "opt_in_training": {
                    "type": "boolean"
                },
                "source": {
                    "type": "string",
                    "enum": [
                        "card_ui",
                        "cli",
                        "api",
                        "test"
                    ]
                },
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                },
                "version": {
                    "type": "string",
                    "default": "v1.0"
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "did",
        "mode_detected",
        "principle_detected",
        "cg_pre",
        "cg_post",
        "cg_delta"
    ],
    "additionalProperties": true
}