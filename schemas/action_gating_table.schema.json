{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stage14 Action Gating Table",
  "type": "object",
  "required": ["spec", "rows"],
  "properties": {
    "spec": {
      "type": "object",
      "required": ["stage", "name"],
      "properties": {
        "stage": { "type": "integer", "const": 14 },
        "name": { "type": "string" },
        "version": { "type": ["string","integer"] }
      },
      "additionalProperties": true
    },
    "rows": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["constraint_status", "harm_profile", "judgment_integrity", "action"],
        "properties": {
          "constraint_status": { "type": "string", "enum": ["NONE","SOFT","HARD"] },
          "harm_profile": { "type": "string", "enum": ["LOW","MEDIUM","HIGH"] },
          "judgment_integrity": { "type": "string", "enum": ["INTACT","DEGRADED","COMPROMISED"] },
          "action": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
