{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Owlume Fallacies v2 (clustered)",
    "type": "object",
    "required": [
        "spec",
        "version",
        "fallacy_groups"
    ],
    "additionalProperties": false,
    "properties": {
        "spec": {
            "type": "string",
            "const": "owlume.fallacies.v2"
        },
        "version": {
            "type": "string"
        },
        "updated_at": {
            "type": "string"
        },
        "notes": {
            "type": "string"
        },
        "fallacy_groups": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "group_id",
                    "root",
                    "variants"
                ],
                "additionalProperties": false,
                "properties": {
                    "group_id": {
                        "type": "string"
                    },
                    "root": {
                        "type": "object",
                        "required": [
                            "id",
                            "label",
                            "definition",
                            "principles"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "label": {
                                "type": "string"
                            },
                            "definition": {
                                "type": "string"
                            },
                            "principles": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "minItems": 1
                            },
                            "drivers": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "severity": {
                                "type": "string",
                                "enum": [
                                    "low",
                                    "medium",
                                    "high"
                                ]
                            }
                        }
                    },
                    "variants": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "id",
                                "label"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "label": {
                                    "type": "string"
                                },
                                "aliases": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "definition": {
                                    "type": "string"
                                },
                                "examples": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "cues": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "phrases": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        },
                                        "keywords": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        },
                                        "heuristics": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                },
                                "principles": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "drivers": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "severity": {
                                    "type": "string",
                                    "enum": [
                                        "low",
                                        "medium",
                                        "high"
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}