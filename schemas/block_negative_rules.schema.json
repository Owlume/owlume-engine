{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stage14 BLOCK Negative Rules",
  "type": "object",
  "required": ["spec", "prohibitions"],
  "properties": {
    "spec": {
      "type": "object",
      "required": ["stage", "name", "non_tunable"],
      "properties": {
        "stage": { "type": "integer", "const": 14 },
        "name": { "type": "string" },
        "version": { "type": ["string","integer"] },
        "non_tunable": { "type": "boolean", "const": true }
      },
      "additionalProperties": true
    },
    "prohibitions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["code", "description"],
        "properties": {
          "code": { "type": "string" },
          "description": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
