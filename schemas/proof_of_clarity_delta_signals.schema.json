{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "proof_of_clarity_delta_signals.schema.json",
    "title": "Proof of Clarity â€” Delta Signals (per-reflection)",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "spec": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "updated": {
                    "type": "string"
                },
                "owner": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "version",
                "updated",
                "owner",
                "description"
            ]
        },
        "locale_default": {
            "type": "string"
        },
        "signals": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string",
                        "minLength": 1
                    },
                    "range": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "delta_min": {
                                "type": "integer",
                                "minimum": 0,
                                "maximum": 10
                            },
                            "delta_max": {
                                "type": "integer",
                                "minimum": 0,
                                "maximum": 10
                            }
                        },
                        "required": [
                            "delta_min",
                            "delta_max"
                        ]
                    },
                    "user_message": {
                        "type": "string",
                        "minLength": 1
                    },
                    "coach_nudge": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "required": [
                    "id",
                    "range",
                    "user_message",
                    "coach_nudge"
                ]
            }
        },
        "rules": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "select_by": {
                    "type": "string",
                    "enum": [
                        "delta"
                    ]
                },
                "tie_breaker": {
                    "type": "string",
                    "enum": [
                        "highest_delta",
                        "first_match"
                    ]
                },
                "fallback": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "id": {
                            "type": "string"
                        },
                        "user_message": {
                            "type": "string"
                        },
                        "coach_nudge": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "id",
                        "user_message",
                        "coach_nudge"
                    ]
                }
            },
            "required": [
                "select_by",
                "tie_breaker",
                "fallback"
            ]
        }
    },
    "required": [
        "spec",
        "signals",
        "rules"
    ]
}